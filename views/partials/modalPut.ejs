<section class="modal-overlay" id="ovarlay">
    <div class="modal" id="modal">
        <div class="modal-header">
          <h3>Atualizar Deus(a)</h3>
          <a href="/" id="close-modal-put">X</a>
        </div>
    
        <div>
            <form class="form-modal" action="/update/<%= godsPut.id %>" method="POST">
              <label for="nome">Nome:</label>
              <input type="text" id="nome" name="nome" value="<%= godsPut.nome %>" />

              <label for="descricao">Descrição:</label>
              <input
                type="text"
                id="descricao"
                name="descricao"
                value="<%= godsPut.descricao %>"
              />

              <label for="cultura">Cultura:</label>
              <input
                type="text"
                name="cultura"
                id="cultura"
                value="<%= godsPut.cultura %>"
              />

              <label for="dominio">Domínio:</label>
            <input
              type="text"
              name="dominio"
              id="dominio"
              value="<%= godsPut.dominio %>"
            />

            <label for="instrumento">Instrumento:</label>
            <input
              type="text"
              name="instrumento"
              id="instrumento"
              value="<%= godsPut.instrumento %>"
            />
    
              <label for="imagem">Link da Imagem</label>
              <input type="text" id="imagem" name="imagem" value="<%= godsPut.imagem %>" />
    
              <button id="btnCadastrar" type="submit">Atualizar</button>
            </form>
        </div>
    </div>
</section>